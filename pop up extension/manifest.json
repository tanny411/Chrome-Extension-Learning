{
    "manifest_version":2,
    "name":"PopUp Extension",
    "version":"0.1",
    "web_accessible_resources":[          
    ],
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background":{
        "scripts": [
            "background.js"
        ]
    },
    "permissions":["tabs"],
    "browser_action":{
        "default_icon": "ct.png",
        "default_popup":"popup.html",
        "default_title":"A popup will come here!"
    }
}
